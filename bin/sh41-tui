#!/usr/bin/env sh

# NAME
#  sh41-tui - SH41's Text User Interface primitives 
#
# SYNOPSIS
#  sh41-tui log [...]
#  sh41-tui confirm [...]
#  sh41-tui choose [...]
#
# ENVIROMENT
#  SH41_LIB
#   Path to SH41 internal lib directory.

internal_scripts_home="$SH41_LIB/_scripts"
utility="$1"; shift

case "$utility" in
  log|confirm|choose)
    "$internal_scripts_home/$utility" "$@" < /dev/stdin
  ;;
  *)
    echo "sh41-tui: Unknown utility $utility" >&2
    exit 1
  ;;
esac

