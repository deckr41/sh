#!/usr/bin/env sh

# NAME
#  sh41-tui - SH41's Text User Interface primitives 
#
# SYNOPSIS
#  sh41-tui log [...]
#  sh41-tui confirm [...]
#  sh41-tui choose [...]
#
# ENVIROMENT
#  SH41_LIB
#   Path to SH41 internal lib directory.
#
#  SH41_ICON
#   SH41 logo icon

internal_scripts_home="$SH41_LIB/_scripts"
utility="$1"; shift

log_error() {
  "$internal_scripts_home"/log --type error "$@"
}

case "$utility" in
  log|confirm|choose)
    "$internal_scripts_home/$utility" "$@" < /dev/stdin
  ;;
  *)
    log_error "Unknown utility $utility"
    exit 1
  ;;
esac

